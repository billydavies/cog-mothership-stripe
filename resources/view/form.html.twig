{{ form_start(form, {'attr': {'id': 'payment-form' }}) }}

	{# Form elements not defined in form class as they need to have no name attribute and SF2 does not support this #}
	<span class="payment-errors"></span>
	<div class="form-row required">
		<label>Card Number</label>
		<input type="text" size="20" data-stripe="number" class="card-number" required="required" />
	</div>

	<div class="form-row">
		<label>CVC
			<div class="help">
				<span>Info</span>

				<p>The card security code is located on the back of credit or debit cards and is typically a separate group
					of 3 digits to the right of the signature strip.</p>
			</div>
		</label>
		<input type="text" size="4" data-stripe="cvc" class="card-cvc"/>
	</div>

	<div class="form-row required">
		<label>Expiration <span>(MM/YYYY)</span></label>
		<input type="text" size="2" data-stripe="exp-month" class="card-expiry-month" placeholder="MM" required="required" />
		<span> / </span>
		<input type="text" size="4" data-stripe="exp-year" class="card-expiry-year" placeholder="YYYY" required="required" />
	</div>

	<div class="security-info"><p>Security information. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi tincidunt elementum diam et feugiat.</p></div>

	<div class="form-row total">
		Total: {{ payable.payableTotal | price(payable.payableCurrency) }} <button type="submit">Pay</button>
	</div>
{{ form_end(form) }}